---
interface Props {
    nomMaison: string;
    adresse: string;
    prix: number;
    surface: number;
    nbChambres: number;
    nbSdb: number;
    imgUrl: string;
    favori?: boolean;
}

const {
    nomMaison,
    adresse,
    prix,
    surface,
    nbChambres,
    nbSdb,
    imgUrl,
    favori = false,
} = Astro.props;
---

<article
    class="bg-white rounded-2xl overflow-hidden border border-gray-100 shadow-sm hover:shadow-md transition group"
>
    <!-- Image -->
    <div class="relative h-48 overflow-hidden">
        <img
            src={`/images/${imgUrl}`}
            alt={nomMaison}
            class="w-full h-full object-cover group-hover:scale-105 transition duration-300"
        />

        {
            favori && (
                <span class="absolute top-3 right-3 bg-primary-600 text-white text-xs font-semibold px-3 py-1 rounded-full">
                    Favori
                </span>
            )
        }
    </div>

    <!-- Contenu -->
    <div class="p-5 space-y-3">
        <h2 class="text-lg font-semibold text-gray-900">
            {nomMaison}
        </h2>

        <p class="text-sm text-gray-500">
            {adresse}
        </p>

        <div class="flex gap-4 text-sm text-gray-600">
            <span>{surface} m²</span>
            <span>{nbChambres} ch.</span>
            <span>{nbSdb} sdb</span>
        </div>

        <div
            class="flex justify-between items-center pt-3 border-t border-gray-100"
        >
            <span class="text-xl font-bold text-primary-600">
                {prix} €
            </span>

            <a
                href="#"
                class="text-sm font-medium text-primary-600 hover:underline"
            >
                Voir l’offre →
            </a>
        </div>
    </div>
</article>
